---
// src/components/SearchBar.astro
const { onInput } = Astro.props;
---

<form class="search-bar">
  <input type="text" name="query" placeholder="Search products..." required oninput={onInput} />
</form>

<style>
  .search-bar {
    display: flex;
    gap: 8px;
    margin-bottom: 16px;
  }

  .search-bar input {
    flex: 1;
    padding: 8px;
    border: 1px solid #ddd;
    border-radius: 4px;
  }
</style>
