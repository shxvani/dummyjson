---
// src/components/ProductCard.astro
export interface Product {
  id: number;
  title: string;
  price: number;
  thumbnail: string;
}

const { id, title, price, thumbnail } = Astro.props;
---

<a href={`/product/${id}`} class="product-card">
  <img src={thumbnail} alt={title} />
  <h2>{title}</h2>
  <p>${price}</p>
</a>

<style>
  .product-card {
    display: block;
    border: 2px solid #000;
    padding: 16px;
    text-align: center;
    text-decoration: none;
    color: inherit;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 4px 4px 0 #000, 8px 8px 0 #ff0, 12px 12px 0 rgb(221, 255, 0);
    transition: transform 0.2s, box-shadow 0.2s;
    background-color: #fff;
  }

  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 4px 4px 0 #000, 8px 8px 0 rgb(210, 216, 141), 12px 12px 0 rgb(238, 248, 98);
  }

  .product-card img {
    max-width: 100%;
    height: auto;
    width: 100%;
    border-bottom: 2px solid #000;
  }

  .product-card h2 {
    font-size: 1.5rem;
    margin: 1rem 0.5rem 0.5rem 0.5rem;
    color: #333;
    text-shadow: 2px 2px rgb(244, 196, 65), 4px 4px rgb(230, 230, 103);
  }

  .product-card p {
    font-size: 1rem;
    color: #555;
    margin: 0.5rem;
  }

  .product-card .price {
    font-size: 1.25rem;
    color: #010306;
    margin: 0.5rem;
    text-shadow: 2px 2px #ff0, 4px 4px #f00;
  }

  .product-card .description {
    font-size: 0.875rem;
    color: #777;
    margin: 0.5rem;
  }

  .product-card .button {
    display: block;
    text-align: center;
    padding: 0.75rem;
    background-color: #08090a;
    color: white;
    text-decoration: none;
    border-radius: 0 0 8px 8px;
    transition: background-color 0.2s;
    text-shadow: 2px 2px #ff0, 4px 4px #f00;
  }

  .product-card .button:hover {
    background-color: #0e1012;
  }
</style>
